<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.taniele.java_desktop.controller.Cadastro"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <Label text="Cadastre-se" layoutX="265.0" layoutY="42.0">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <VBox layoutX="209.0" layoutY="120.0" spacing="10">
            <Label text="Email:" />
            <TextField fx:id="emailTextField" promptText="Digite seu email" />
            <Label text="Nome de usuário:" />
            <TextField fx:id="nomeTextField" promptText="Digite seu nome de usuário" />
            <Label text="Senha:" />
            <PasswordField fx:id="senhaPasswordField" promptText="Digite sua senha" />
            <Button text="Cadastrar" onAction="#cadastrarButtonAction" />
            <Hyperlink text="Já tem uma conta?" onAction="#loginLinkAction" />
        </VBox>
    </children>

</AnchorPane>